@model WebApplication1.Models.Material

@{
    ViewBag.Title = "UploadMaterial";
}

<h2>UploadMaterial</h2>

@using (Html.BeginForm("UploadMaterial", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Material</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" name="file" />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to MaterialList", "MaterialIndex")
</div>

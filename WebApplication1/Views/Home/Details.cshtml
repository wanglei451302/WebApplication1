@model WebApplication1.Models.Blogs

@{
    ViewBag.Title = "Details";
    Disqus.Initialize("{forumShortName}");
}

<head>
    
    <style type="text/css">
        p {
            white-space: pre-line;
        }

        div.d2 {
            background-color: white;
            position:  relative;
        }

        p.p1{
            TEXT-ALIGN: center;
        }
        h1{
            TEXT-ALIGN: center;
        }
        div.d1{
            background-color: white;margin-top: 100px;
        }
    </style>
       <script type="text/javascript" src="@Url.Content("~/Scripts/")jquery-1.10.2.js"></script>
       <script>
           $(document).ready(function () {
               $('.p2').load("/Blogcontent/"+"@Model.id"+"/content.html");
           });
       </script>
</head>

<div class="d1">        
    <div class="d2">
        <h1>
            @Html.DisplayFor(model => model.name)
        </h1>
        <p class="p1">
            @Html.DisplayFor(model => model.created_at)
        </p>
        <div/>
        <p id="cont" >            
            
         
        </p>
        <p class="p2"></p>
        
    </div>
</div>
<p>
    @Html.ActionLink("返回首页", "Index")
    @Disqus.ShowComments("{pageId}")
</p>
<div class="d1"></div>

